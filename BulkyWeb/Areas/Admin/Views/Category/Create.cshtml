@model Category

<div class="pb-2">
    <h2 class="text-primary">Create Category</h2>
    <hr />
</div>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row mb-3 p-1">
            <label asp-for ="Name" class="p-0"></label>
            <input asp-for="Name" type="type" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="type" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row mt-5">
            <div class="col-4 offset-4 text-center">
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
