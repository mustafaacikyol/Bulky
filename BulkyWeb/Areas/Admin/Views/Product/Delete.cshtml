@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input asp-for="ISBN" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <input asp-for="ListPrice" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price50" class="p-0"></label>
            <input asp-for="Price50" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price100" class="p-0"></label>
            <input asp-for="Price100" type="type" disabled class="form-control" />
        </div>
        <div class="row mt-5">
            <div class="col-4 offset-4 text-center">
                <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            </div>
        </div>
    </div>
</form>




