@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="type" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="type" disabled class="form-control" />
        </div>
        <div class="row mt-5">
            <div class="col-4 offset-4 text-center">
                <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            </div>
        </div>
    </div>
</form>




